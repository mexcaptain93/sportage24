.index

  .section
    min-height: 100vh
    background-position: center center
    background-size: cover
    background-repeat: no-repeat
    font-family: $mont
    padding-bottom: 40px

    @media $mobile
      min-height: auto
      height: 350px
      padding-bottom: 88px

    .container

      @media $tablet
        display: flex
        flex-direction: column
        height: 100%

    &__heading
      margin-left: -8px

      color: $white
      text-transform: uppercase
      font-size: 84px
      letter-spacing: 10.3px

      @media $tablet
        font-size: 48px
        letter-spacing: 5px

      @media $mobile
        font-size: 26px
        text-align: center

      @media $mobile_small
        font-size: 18px


    &__subheading
      margin-top: 5px
      margin-left: 26px

      font-family: $museo100
      color: $white
      font-size: 58px
      letter-spacing: 7.4px

      @media $tablet
        margin-left: 11px
        margin-top: 0

        font-size: 25px

      @media $mobile
        margin-left: 0

        font-size: 17px
        letter-spacing: 2px
        text-align: center


    &__text
      padding-top: 395px
      margin-bottom: 100px
      
      @media $desktop_small
        padding-top: 250px

      @media $tablet
        display: flex
        flex-direction: column
        flex-grow: 1
        justify-content: center
        padding-top: 50%
        margin-bottom: 20px

      @media $mobile
        padding-top: 0
        justify-content: flex-end

    &__btns
      display: flex

      @media $tablet
        margin-bottom: 60px

      @media $mobile
        flex-direction: column
        margin-top: 30px
        margin-bottom: 0

    &__btn
      margin-right: 30px

      @media $mobile
        width: 100%
        text-align: center
        margin-bottom: 20px

      &:last-child
        margin-right: 0

      a
        border: 2px solid $white
        display: inline-block
        padding: 26px 37px
        transition: 0.3s all ease
        background-color: transparent

        color: $white
        font-size: 30px
        letter-spacing: 2.25px
        font-family: $museo100

        @media $tablet
          padding: 13px 21px

          font-size: 17px
          letter-spacing: 1.5px

        @media $mobile
          font-size: 14px
          width: 100%

        &:hover
          color: $gray_dark
          background-color: $white

          &::after
            background-image: url('../img/general/btn-arrow-gray.png')


        &::after
          content: ''
          display: inline-block
          background-image: url('../img/general/btn-arrow.png')
          width: 18px
          height: 17px
          margin-left: 26px
          transition: 0.3s all ease
          background-size: contain

          @media $tablet
            width: 10px
            height: 9px

          @media $mobile
            margin-left: 18px

      &_yellow

        a
          border-color: $yellow
          color: $yellow

          &::after
            background-image: url('../img/general/btn-arrow-yellow.png')

          &:hover
            color: $white
            background-color: $yellow

            &::after
              background-image: url('../img/general/btn-arrow.png')



  .first
    height: calc(100vh - 80px)

    @media $mobile
      height: 340px

    &__top
      display: flex
      justify-content: space-between
      padding-top: 42px

      @media $mobile
        padding-top: 0
        flex-direction: column

    &__catalog-btn
      color: $gray_dark
      font-size: 18px
      letter-spacing: 1.35px
      text-transform: uppercase
      position: relative
      background-color: alpha($white, .29)
      border-radius: 10px
      padding: 28px 31px 26px 86px
      transition: 0.3s all ease

      @media $tablet
        padding: 22px 25px 22px 74px
        font-size: 15px

      @media $mobile
        border-radius:0
        margin: 0 -20px 26px
        background-color: $yellow
        display: inline-block
        padding: 14px 0

        text-transform: none
        text-align: center
        font-size: 16px
        color: $white

      &:hover
        background-color: $yellow

      &::before
        content: ''
        position: absolute
        display: block
        background-image: url('../img/general/burger-catalog.png')
        width: 30px
        height: 23px
        top: 23px
        left: 32px

        @media $tablet
          width: 25px
          height: 20px
          top: 18px
          left: 27px
          background-size: cover

        @media $mobile
          display: inline-block
          position: relative
          top: 3px
          left: -40px
          width: 18px
          height: 16px


      a
        display: block
        width: 100%
        height: 100%

    &__recall
      position: relative

      @media $mobile
        text-align: center

      &::after
        content: ''
        display: block
        position: absolute
        left: -50px
        top: 20px
        width: 19px
        height: 21px
        background-image: url('../img/general/phone.png')
        background-repeat: repeat-x
        background-position: center left

        @media $tablet
          left: -43px
          top: 14px

        @media $mobile
          display: none


    &__phone
      margin-bottom: 11px

      font-size: 27px
      letter-spacing: 2px
      color: $gray_dark
      transition: 0.3s all ease

      @media $tablet
        margin-bottom: 9px

        font-size: 23px

      @media $mobile
        position: relative
        display: inline-block
        padding-left: 20px

        text-align: center
        font-size: 16px

      &::after
        content: ''
        display: none
        position: absolute
        left: -10px
        top: 1px
        width: 11px
        height: 13px
        background-image: url('../img/general/phone.png')
        background-repeat: repeat-x
        background-position: center left
        background-size: cover

        @media $mobile
          display: block


      &:hover
        color: $yellow


    &__recall-link

      font-family: $museo700
      font-size: 20px
      letter-spacing: 1.5px
      color: $gray_dark
      transition: 0.3s all ease

      @media $tablet
        font-size: 16px

      @media $mobile
        display: none

      &:hover
        color: $yellow

        a::after
          background-image: url('../img/general/underline-pattern-yellow.png')


      a
        position: relative

        &::after
          content: ''
          display: block
          position: absolute
          left: 0
          bottom: -9px
          height: 1px
          width: 100%
          background-image: url('../img/general/underline-pattern.png')
          background-repeat: repeat-x
          background-position: center left





  .second

    &__text
      text-align: right

  .categories

    &__list
      display: flex

      @media $tablet
        flex-wrap: wrap

    &__item
      width: calc(100% / 7)
      height: 300px

      @media $tablet
        width: calc(100% / 3)
        height: 275px

      @media $mobile
        width: 50%
        height: 205px

      &:last-child:nth-child(3n+1)

        @media $tablet
          width: 100%

        .category

          &__img

            @media $tablet
              background-position: center bottom

          &__name

            @media $tablet
              text-align: left
              padding-left: 70px

            @media $mobile
              padding-left: 30px





    .category
      position: relative

      &:hover

        .category

          &__img

            &::after
              background-color: alpha($black, 0)

          &__name
            opacity: 0

      &__img
        height: 100%
        background-position: center center
        background-size: cover
        position: relative

        &::after
          content: ''
          display: block
          position: absolute
          top: 0
          left: 0
          width: 100%
          height: 100%
          background-color: alpha($black, .3)
          transition: .3s ease all

      &__name
        position: absolute
        bottom: 40px
        left: 0
        width: 100%
        opacity: 1
        transition: .3s all ease

        font-size: 20px
        letter-spacing: 1.5px
        text-transform: uppercase
        color: $white
        text-align: center
        font-family: $mont

        @media $desktop_small
          font-size: 16px

        @media $tablet
          font-size: 20px

        @media $mobile
          bottom: 30px

          font-size: 15px
          letter-spacing: 1.1px

  .about
    position: relative
    padding: 101px 138px 160px

    @media $tablet
      padding: 72px 47px 180px

    @media $mobile
      padding: 43px 47px 9px

    @media $mobile_small
      padding: 43px 20px 9px

    .container

      @media $tablet
        padding: 0

    &__heading
      margin-bottom: 7px

      color: $black
      font-size: 92px
      letter-spacing: 10px
      text-transform: uppercase
      font-family: $mont

      @media $tablet
        font-size: 45px
        letter-spacing: 6px

      @media $mobile
        font-size: 34px

        margin-bottom: 6px

      @media $mobile_small
        font-size: 28px

    &__subheading
      padding-left: 30px
      margin-bottom: 66px

      color: $black
      font-size: 55px
      letter-spacing: 10px

      @media $tablet
        margin-bottom: 35px
        padding-left: 17px
        font-size: 28px
        letter-spacing: 4px

      @media $mobile
        margin-bottom: 28px

        font-size: 20px

      @media $mobile_small
        font-size: 16px


    &__text
      max-width: 800px

    &__img
      position: absolute
      right: 0
      bottom: 0
      z-index: -1
      background-image: url('../img/content/about-cycle.jpg')
      background-repeat: no-repeat
      background-size: cover
      width: 751px
      height: 824px

      @media $desktop_small
        width: 600px
        height: 640px

      @media $tablet
        width: 300px
        height: 320px

      @media $mobile
        display: none

    p
      margin-bottom: 25px

      font-size: 18px
      line-height: 24px
      letter-spacing: 1.3px
      color: $black
      font-family: $museo100

      @media $tablet
        font-size: 14px
        line-height: 18px

      @media $mobile
        font-size: 11px
        line-height: 15px
