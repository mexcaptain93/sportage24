.index

  .section
    height: 100vh
    background-position: center center
    background-size: cover
    background-repeat: no-repeat
    font-family: $mont

    @media $mobile
      height: 350px
      padding-bottom: 88px

    .container

      @media $tablet
        display: flex
        flex-direction: column
        height: 100%

    &__heading
      margin-left: -8px

      color: $white
      text-transform: uppercase
      font-size: 84px
      letter-spacing: 10.3px

      @media $tablet
        font-size: 48px
        letter-spacing: 5px

      @media $mobile
        font-size: 26px
        text-align: center

      @media $mobile_small
        font-size: 18px


    &__subheading
      margin-top: 5px
      margin-left: 26px

      font-family: $museo100
      color: $white
      font-size: 58px
      letter-spacing: 7.4px

      @media $tablet
        margin-left: 11px
        margin-top: 0

        font-size: 25px

      @media $mobile
        margin-left: 0

        font-size: 17px
        letter-spacing: 2px
        text-align: center


    &__text
      padding-top: 395px
      margin-bottom: 100px

      @media $tablet
        display: flex
        flex-direction: column
        flex-grow: 1
        justify-content: center
        padding-top: 50%
        margin-bottom: 0

      @media $mobile
        padding-top: 0
        justify-content: flex-end

    &__btns
      display: flex

      @media $tablet
        margin-bottom: 60px

      @media $mobile
        flex-direction: column
        margin-top: 30px
        margin-bottom: 0

    &__btn
      margin-right: 30px

      @media $mobile
        width: 100%
        text-align: center
        margin-bottom: 20px

      &:last-child
        margin-right: 0

      a
        border: 2px solid $white
        display: inline-block
        padding: 26px 37px
        transition: 0.3s all ease
        background-color: transparent

        color: $white
        font-size: 30px
        letter-spacing: 2.25px
        font-family: $museo100

        @media $tablet
          padding: 13px 21px

          font-size: 17px
          letter-spacing: 1.5px

        @media $mobile
          font-size: 14px
          width: 100%

        &:hover
          color: $gray_dark
          background-color: $white

          &::after
            background-image: url('../img/general/btn-arrow-gray.png')


        &::after
          content: ''
          display: inline-block
          background-image: url('../img/general/btn-arrow.png')
          width: 18px
          height: 17px
          margin-left: 26px
          transition: 0.3s all ease
          background-size: contain

          @media $tablet
            width: 10px
            height: 9px

      &_yellow

        a
          border-color: $yellow
          color: $yellow

          &::after
            background-image: url('../img/general/btn-arrow-yellow.png')

          &:hover
            color: $white
            background-color: $yellow

            &::after
              background-image: url('../img/general/btn-arrow.png')



  .first
    height: calc(100vh - 80px)

    @media $mobile
      height: 450px

    &__top
      display: flex
      justify-content: space-between
      padding-top: 42px

      @media $mobile
        padding-top: 0
        flex-direction: column

    &__catalog-btn
      color: $gray_dark
      font-size: 18px
      letter-spacing: 1.35px
      text-transform: uppercase
      position: relative
      background-color: alpha($white, .29)
      border-radius: 10px
      padding: 28px 31px 26px 86px
      transition: 0.3s all ease

      @media $tablet
        padding: 22px 25px 22px 74px
        font-size: 15px

      @media $mobile
        border-radius:0
        margin: 0 -20px 26px
        background-color: $yellow
        display: inline-block
        padding: 14px 0

        text-transform: none
        text-align: center
        font-size: 16px
        color: $white

      &:hover
        background-color: $yellow

      &::before
        content: ''
        position: absolute
        display: block
        background-image: url('../img/general/burger-catalog.png')
        width: 30px
        height: 23px
        top: 23px
        left: 32px

        @media $tablet
          width: 25px
          height: 20px
          top: 18px
          left: 27px
          background-size: cover

        @media $mobile
          display: inline-block
          position: relative
          top: 3px
          left: -40px
          width: 18px
          height: 16px


      a
        display: block
        width: 100%
        height: 100%

    &__recall
      position: relative

      @media $mobile
        text-align: center

      &::after
        content: ''
        display: block
        position: absolute
        left: -50px
        top: 20px
        width: 19px
        height: 21px
        background-image: url('../img/general/phone.png')
        background-repeat: repeat-x
        background-position: center left

        @media $tablet
          left: -43px
          top: 14px

        @media $mobile
          display: none


    &__phone
      margin-bottom: 11px

      font-size: 27px
      letter-spacing: 2px
      color: $gray_dark
      transition: 0.3s all ease

      @media $tablet
        margin-bottom: 9px

        font-size: 23px

      @media $mobile
        position: relative
        display: inline-block
        padding-left: 20px

        text-align: center
        font-size: 16px

      &::after
        content: ''
        display: none
        position: absolute
        left: -10px
        top: 1px
        width: 11px
        height: 13px
        background-image: url('../img/general/phone.png')
        background-repeat: repeat-x
        background-position: center left
        background-size: cover

        @media $mobile
          display: block


      &:hover
        color: $yellow


    &__recall-link

      font-family: $museo700
      font-size: 20px
      letter-spacing: 1.5px
      color: $gray_dark
      transition: 0.3s all ease

      @media $tablet
        font-size: 16px

      @media $mobile
        display: none

      &:hover
        color: $yellow

        a::after
          background-image: url('../img/general/underline-pattern-yellow.png')


      a
        position: relative

        &::after
          content: ''
          display: block
          position: absolute
          left: 0
          bottom: -9px
          height: 1px
          width: 100%
          background-image: url('../img/general/underline-pattern.png')
          background-repeat: repeat-x
          background-position: center left





  .second

    &__text
      text-align: right