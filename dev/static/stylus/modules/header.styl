.header
  background-color: $gray_dark

  .container
    height: 80px
    display: flex
    align-items: center

    @media $tablet
      justify-content: space-between

  &__logo
    width: 244px

    @media $mobile
      width: 155px
      margin-right: 40px


  .menu
    color: $white
    font-size: 20px
    line-height: 1
    letter-spacing: 1.5px
    flex-grow: 1

    @media $tablet
      display: none

    &__list
      display: flex
      justify-content: center

    &__item
      margin-right: 60px
      transition: 0.3s all ease

      &:last-child
        margin-right: 0

      &:hover
        color: $yellow

      &_active
        color: $yellow

  .btns

    &__list
      display: flex
      align-items: center

    &__item
      display: block
      background-position: center center
      background-size: cover
      margin-left: 60px

      @media $tablet
        margin-left: 95px

      @media $mobile
        margin-left: 33px

      &:first-child
        margin-left: 0

      a
        display: block
        width: 100%
        height: 100%

      &_search
        width: 24px
        height: 24px
        background-image: url('../img/general/search.png')

        @media $mobile
          width: 16px
          height: 16px

        &:hover
          background-image: url('../img/general/search-active.png')

      &_cart
        width: 27px
        height: 24px
        background-image: url('../img/general/cart.png')

        @media $mobile
          width: 18px
          height: 16px

        &:hover
          background-image: url('../img/general/cart-active.png')

      &_burger
        display: none
        width: 27px
        height: 24px
        background-image: url('../img/general/burger.png')

        @media $tablet
          display: block

        @media $mobile
          width: 22px
          height: 12px
