.footer
  flex 0 0 auto
  background-color: $gray_dark
  padding-top: 50px
  padding-bottom: 95px

  color: $white

  @media $tablet
    padding: 40px 0

  @media $tablet
    padding: 37px 0 26px

  &__block


    &_main
      width: 350px

      @media $tablet
        width: 272px

      @media $mobile
        width: 100%
        order: 1

      .footer__wrapper

        @media $mobile
          width: 170px
          margin: 0 auto



    &_catalog
      width: 330px
      padding-top: 18px

      @media $tablet
        width: 258px
        padding-top: 14px

      @media $mobile
        width: 50%
        padding-left: 30px
        order: 3


    &_menu
      width: 260px
      padding-top: 18px

      @media $tablet
        width: auto
        padding-top: 14px

      @media $mobile
        width: 50%
        order: 4
        padding-left: 20px

    &_socials
      padding-top: 18px

      @media $tablet
        width: 100%
        padding-left: 272px
        padding-top: 24px

      @media $mobile
        padding-left: 0
        padding-top: 40px
        padding-bottom: 35px
        margin-bottom: 15px
        order: 2
        border-bottom: 1px solid $gray


        text-align: center

      .footer__heading
        margin-bottom: 20px

        @media $mobile
          margin-bottom: 12px

      .footer__link
        font-size: 17px
        letter-spacing: 1.25px
        line-height: 1

        &:hover
          text-decoration: underline

        @media $tablet
          font-size: 13px

        @media $mobile
          font-size: 11px

  a
    &:hover
      color: $yellow
      transition .3s all ease


  .container
    display: flex

    @media $tablet
      flex-wrap: wrap
      max-width: 770px
      margin: 0 auto

    @media $mobile
      justify-content: center
      padding: 0 7px

  &__heading
    margin-bottom: 34px

    font-family: $mont
    font-size: 17px
    letter-spacing: 1.25px
    line-height: 1
    text-transform: uppercase

    @media $tablet
      margin-bottom: 26px

      font-size: 13px

    @media $mobile
      margin-bottom: 21px

      font-size: 11px

  &__logo
    margin-bottom: 5px

    @media $tablet
      width: 184px
      margin: 0 auto 5px

    @media $mobile
      width: 160px

  &__ip
    margin-bottom: 56px

    font-family: $museo500
    font-size: 20px
    letter-spacing: 1.5px
    color: $yellow

    @media $tablet
      margin-bottom: 40px
      padding-left: 5px

      font-size: 15px

    @media $mobile
      margin-bottom: 34px

      font-size: 12px

  &__phone
    margin-bottom: 10px

    font-family: $museo700
    font-size: 26px
    letter-spacing: 1.95px

    @media $tablet
      margin-bottom: 7px

      font-size: 20px

    @media $mobile
      font-size: 16px
      text-align: center

  &__email
    font-family: $museo700
    font-size: 19px
    letter-spacing: 1.25px

    @media $tablet
      font-size: 14px

    @media $mobile
      font-size: 12px
      text-align: center
    
    a
      position: relative
      display: inline-block

      &::after
        content: ''
        display: block
        position: absolute
        left: 0
        bottom: -9px
        height: 1px
        //width: 100%
        background-image: url('../img/general/underline-pattern.png')
        background-repeat: repeat-x
        background-position: center left

        @media $mobile
          left: 4px
          right: 4px
          bottom: -7px


  .links

    &__item
      margin-bottom: 13px

      font-size: 20px
      line-height: 1
      letter-spacing: 1.1px

      @media $tablet
        margin-bottom: 12px

        font-size: 14px

      @media $mobile
        font-size: 12px

  .socials

    &__list
      display: flex
      margin-bottom: 25px

      @media $tablet
        margin-bottom: 20px

      @media $mobile
        justify-content: center
        margin-bottom: 15px



    &__item
      display: block
      width: 32px
      height: 32px
      margin-right: 20px
      background-repeat: no-repeat
      background-position: center center
      background-size: cover

      @media $tablet
        width: 23px
        height: 23px
        margin-right: 15px

      @media $mobile
        width: 20px
        height: 20px
        margin-right: 13px

      &:last-child
        margin-right: 0

      &_instagram
        background-image: url('../img/general/instagram.png')

        &:hover
          background-image: url('../img/general/instagram-active.png')

      &_facebook
        background-image: url('../img/general/facebook.png')

        &:hover
          background-image: url('../img/general/facebook-active.png')

      &_youtube
        background-image: url('../img/general/youtube.png')

        &:hover
          background-image: url('../img/general/youtube-active.png')

      &_vk
        background-image: url('../img/general/vk.png')

        &:hover
          background-image: url('../img/general/vk-active.png')

      a
        display: block
        width: 100%
        height: 100%


