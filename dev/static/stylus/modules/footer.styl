.footer
  flex 0 0 auto
  background-color: $gray_dark
  padding-top: 50px
  padding-bottom: 95px

  color: $white

  &__block

    &_main
      width: 350px

    &_catalog
      width: 330px
      padding-top: 18px

    &_menu
      width: 260px
      padding-top: 18px

    &_socials
      padding-top: 18px

      .footer__heading
        margin-bottom: 20px

      .footer__link
        font-size: 17px
        letter-spacing: 1.25px
        line-height: 1

  a
    &:hover
      color: $yellow
      transition .3s all ease


  .container
    display: flex

  &__heading
    margin-bottom: 34px

    font-family: $mont
    font-size: 17px
    letter-spacing: 1.25px
    line-height: 1
    text-transform: uppercase

  &__logo
    margin-bottom: 5px

  &__ip
    margin-bottom: 56px

    font-family: $museo500
    font-size: 20px
    letter-spacing: 1.5px
    color: $yellow

  &__phone
    margin-bottom: 10px

    font-family: $museo700
    font-size: 26px
    letter-spacing: 1.95px

  &__email
    font-family: $museo700
    font-size: 19px
    letter-spacing: 1.25px
    
    a
      position: relative
      display: inline-block

      &::after
        content: ''
        display: block
        position: absolute
        left: 0
        bottom: -9px
        height: 1px
        width: 100%
        background-image: url('../img/general/underline-pattern.png')
        background-repeat: repeat-x
        background-position: center left


  .links

    &__item
      margin-bottom: 13px

      font-size: 20px
      line-height: 1
      letter-spacing: 1.1px

  .socials

    &__list
      display: flex
      margin-bottom: 25px

    &__item
      display: block
      width: 32px
      height: 32px
      margin-right: 20px
      background-repeat: no-repeat
      background-position: center center

      &:last-child
        margin-right: 0

      &_instagram
        background-image: url('../img/general/instagram.png')

        &:hover
          background-image: url('../img/general/instagram-active.png')

      &_facebook
        background-image: url('../img/general/facebook.png')

        &:hover
          background-image: url('../img/general/facebook-active.png')

      &_youtube
        background-image: url('../img/general/youtube.png')

        &:hover
          background-image: url('../img/general/youtube-active.png')

      &_vk
        background-image: url('../img/general/vk.png')

        &:hover
          background-image: url('../img/general/vk-active.png')

      a
        display: block
        width: 100%
        height: 100%


